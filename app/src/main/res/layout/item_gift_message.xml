<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

   <!-- <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_gift_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="10dp">


            <yang.stone.com.livegiftshow.ui.RoundImageView
                android:id="@+id/img_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="1dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/face" />

            <LinearLayout
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_avatar"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="李大广"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/gift_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="送老师一只玫瑰花"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/gift_type"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/info"
                android:scaleType="fitXY"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/gift_666" />
        </RelativeLayout>


    <!--</FrameLayout>-->


    <yang.stone.com.livegiftshow.ui.MagicTextView
        android:id="@+id/gift_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:includeFontPadding="false"
        android:text="x12"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:strokeColor="#B94810"
        app:strokeJoinStyle="miter"
        android:paddingRight="10dp"
        app:strokeWidth="2" />


</LinearLayout>